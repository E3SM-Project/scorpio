/** @file 
 *
 * This is the template for the pio_config.h file, which is created at
 * build-time by cmake.
 */
#ifndef _PIO_CONFIG_
#define _PIO_CONFIG_

/** The major part of the version number. */
#define PIO_VERSION_MAJOR @VERSION_MAJOR@

/** The minor part of the version number. */
#define PIO_VERSION_MINOR @VERSION_MINOR@

/** The patch part of the version number. */
#define PIO_VERSION_PATCH @VERSION_PATCH@

/** Set to non-zero to use native malloc. By defauly the PIO library
 * will use the included bget() package for memory management. */
#define PIO_USE_MALLOC @USE_MALLOC@

/** Set to non-zero to turn on logging. Output may be large. */
#define PIO_ENABLE_LOGGING @ENABLE_LOGGING@

/** Size of MPI_Offset type. */
#define SIZEOF_MPI_OFFSET @SIZEOF_MPI_OFFSET@

/** Size of PIO_Offset type */
#define SIZEOF_PIO_OFFSET @PIO_OFFSET_SIZE@

/** PIO_Offset type */
#define PIO_OFFSET_C_TYPENAME @PIO_OFFSET_C_TYPENAME@

/** PIO_Offset MPI type */
#define PIO_OFFSET @PIO_OFFSET_C_MPITYPENAME@

/** Set to non-zero to dump the decomposition information from PIO programs. */
#define PIO_SAVE_DECOMPS @SAVE_DECOMPS@

/** Set the regex to use to save decomps */
#define PIO_SAVE_DECOMPS_REGEX "@PIO_SAVE_DECOMPS_REGEX@"

/** Set to non-zero to limit the number of non-contiguous regions cached in a single IO process. */
#define PIO_LIMIT_CACHED_IO_REGIONS @LIMIT_CACHED_IO_REGIONS@

/** Maximum number of non-contiguous regions cached in a single IO process. */
#define PIO_MAX_CACHED_IO_REGIONS @PIO_MAX_CACHED_IO_REGIONS@

/** Maximum number of OSTs to be used in a Lustre file syestem. */
#define PIO_MAX_LUSTRE_OSTS @PIO_MAX_LUSTRE_OSTS@

/** Striping unit hint in bytes for a Lustre or GPFS file system. */
#define PIO_STRIPING_UNIT @PIO_STRIPING_UNIT@

/** Extra bytes reserved in the header when creating NetCDF files. */
#define PIO_RESERVED_FILE_HEADER_SIZE @PIO_RESERVED_FILE_HEADER_SIZE@

/** Maximum number of I/O decompositions registered with ADIOS type */
#define PIO_MAX_ADIOS_DECOMPS @PIO_MAX_ADIOS_DECOMPS@

/** Maximum number of cached application steps for ADIOS type */
#define PIO_MAX_CACHED_STEPS_FOR_ADIOS @PIO_MAX_CACHED_STEPS_FOR_ADIOS@

/** Range of length of the local decomposition map for SUBSET rearanger. */
#define PIO_REARR_ANY_SUBSET_RANGE "@PIO_REARR_ANY_SUBSET_RANGE@"

/** Set the regex to override ADIOS type with PnetCDF for file creation. */
#define SPIO_OVERRIDE_ADIOS_WITH_PNETCDF_FNAME_REGEX "@SPIO_OVERRIDE_ADIOS_WITH_PNETCDF_FNAME_REGEX@"

/** Enable flush after each collective write for HDF5 */
#define SPIO_HDF5_FLUSH_AFTER_COLL_WR @SPIO_HDF5_FLUSH_AFTER_COLL_WR@

/** Set the regex to override HDF5 compression for variables */
#define SPIO_OVERRIDE_HDF5_COMPRESSION_VNAME_REGEX "@SPIO_OVERRIDE_HDF5_COMPRESSION_VNAME_REGEX@"

/** COMPRESSION OPTIONS */
/** HDF5 + Blosc2 compression level = [0-9] */
#define SPIO_HDF5_BLOSC2_COMPRESSION_LEVEL @SPIO_HDF5_BLOSC2_COMPRESSION_LEVEL@
/** HDF5 + Blosc2 compression library to use : e.g. BLOSC_ZSTD */
#define SPIO_HDF5_BLOSC2_COMPRESSION_LIBRARY @SPIO_HDF5_BLOSC2_COMPRESSION_LIBRARY@
/** HDF5 + Blosc2 compression library to use : e.g. "BLOSC_NOSHUFFLE", "BLOSC_SHUFFLE" (byte shuffle), "BLOSC_BITSHUFFLE" */
#define SPIO_HDF5_BLOSC2_SHUFFLE_METHOD @SPIO_HDF5_BLOSC2_SHUFFLE_METHOD@

/** The HDF5+ZFP compression mode to use : rate, precision, accuracy or lossless
    Valid values are : "H5Z_ZFP_MODE_RATE" (Fixed rate : Fixed bits per compressed value),
      "H5Z_ZFP_MODE_PRECISION" (Fixed precision: Fixed bits per original value),
      "H5Z_ZFP_MODE_ACCURACY" (Fixed accuracy: Max absolute error between original and compressed value is bound),
      "H5Z_ZFP_MODE_REVERSIBLE" (lossless compression) */
#define SPIO_HDF5_ZFP_COMPRESSION_MODE "@SPIO_HDF5_ZFP_COMPRESSION_MODE@"
/** The HDF5+ZFP : Fixed bit rate : Number of bits to use for each compressed value. e.g. : 16 */
#define SPIO_HDF5_ZFP_COMPRESSION_RATE @SPIO_HDF5_ZFP_COMPRESSION_RATE@
/** The HDF5+ZFP : Fixed precision : Number of bits to use for each original value. e.g. 16 */
#define SPIO_HDF5_ZFP_PRECISION @SPIO_HDF5_ZFP_PRECISION@
/** The HDF5+ZFP : Fixed accuracy : max absolute error between compressed and original values. e.g. 0.001 */
#define SPIO_HDF5_ZFP_ACCURACY @SPIO_HDF5_ZFP_ACCURACY@

/** ADIOS2 + Blosc2 compression level = [0-9] */
#define SPIO_ADIOS2_BLOSC2_COMPRESSION_LEVEL "@SPIO_ADIOS2_BLOSC2_COMPRESSION_LEVEL@"
/** ADIOS2 + Blosc2 compression library to use : e.g. zstd */
#define SPIO_ADIOS2_BLOSC2_COMPRESSION_LIBRARY "@SPIO_ADIOS2_BLOSC2_COMPRESSION_LIBRARY@"
/** ADIOS2 + Blosc2 compression library to use : e.g. "BLOSC_NOSHUFFLE", "BLOSC_SHUFFLE" (byte shuffle), "BLOSC_BITSHUFFLE" */
#define SPIO_ADIOS2_BLOSC2_SHUFFLE_METHOD "@SPIO_ADIOS2_BLOSC2_SHUFFLE_METHOD@"

/** The ADIOS2+ZFP compression mode to use : rate, precision, accuracy or lossless
    Valid values are :
      "ADIOS2_ZFP_MODE_RATE" (rate : Fixed bit rate. Number of bits in compressed value is fixed),
      "ADIOS2_ZFP_MODE_PRECISION" (Fixed precision: Number of bits in original value is fixed),
      "ADIOS2_ZFP_MODE_ACCURACY" (Fixed accuracy: Absolute error between compressed and original value is bound),
      "ADIOS2_ZFP_MODE_REVERSIBLE" (lossless compression) */
#define SPIO_ADIOS2_ZFP_COMPRESSION_MODE "@SPIO_ADIOS2_ZFP_COMPRESSION_MODE@"
/** The ADIOS2+ZFP Fixed bit rate : Number of bits to use for each compressed value is fixed. e.g. : 16 */
#define SPIO_ADIOS2_ZFP_COMPRESSION_RATE "@SPIO_ADIOS2_ZFP_COMPRESSION_RATE@"
/** The ADIOS2+ZFP Fixed precision, variable bit rate : Number of bits used for each original value is fixed. e.g. 16 */
#define SPIO_ADIOS2_ZFP_PRECISION "@SPIO_ADIOS2_ZFP_PRECISION@"
/** The ADIOS2+ZFP Fixed accuracy : max absolute error between compressed and original values is bound. e.g. 0.001 */
#define SPIO_ADIOS2_ZFP_ACCURACY "@SPIO_ADIOS2_ZFP_ACCURACY@"

/** The ADIOS2+SZ max absolute error between compressed and original values. e.g. 0.001 */
#define SPIO_ADIOS2_SZ_ACCURACY "@SPIO_ADIOS2_SZ_ACCURACY@"

/** Set to 1 if the library is configured to use the PnetCDF library,
 *  0 otherwise */
#define PIO_USE_PNETCDF @PIO_USE_PNETCDF@

/** Set to 1 if the library is configured to use the NetCDF library,
 *  0 otherwise */
#define PIO_USE_NETCDF @PIO_USE_NETCDF@

/** Set to 1 if the library is configured to use the NetCDF4 features,
 *  in the NetCDF library, 0 otherwise */
#define PIO_USE_NETCDF4 @PIO_USE_NETCDF4@

/** Set to 1 if the library is configured to use the NetCDF4 features,
 *  and has NCZarr support, 0 otherwise */
#define PIO_USE_NETCDF4_NCZARR @PIO_USE_NETCDF4_NCZARR@

/** Set to 1 if the library is configured to use the ADIOS library,
 *  0 otherwise */
#define PIO_USE_ADIOS @PIO_USE_ADIOS@

/** Set to 1 if the library is configured to use the HDF5 library,
 *  0 otherwise */
#define PIO_USE_HDF5 @PIO_USE_HDF5@

/** Set to 1 if the library is configured to use Micro timing,
 *  0 otherwise */
#define PIO_USE_MICRO_TIMING @USE_MICRO_TIMING@

/** Set to 1 if the library is configured to print I/O statistics,
 *  0 otherwise */
#define PIO_ENABLE_IO_STATS @ENABLE_IO_STATS@

/** Set to 1 if the library is configured to trace API calls,
 *  0 otherwise */
#define SPIO_ENABLE_API_TRACING @ENABLE_API_TRACING@

/** Set to 1 if the library is configured to trace API calls &
 *  trace variable values in the API calls,
 *  0 otherwise */
#define SPIO_ENABLE_API_VAR_TRACING @ENABLE_API_VAR_TRACING@

/** Set to 1 if the library is configured to use PnetCDF independent data mode,
 *  0 otherwise */
#define PIO_USE_INDEP_MODE @USE_INDEP_MODE@

#endif /* _PIO_CONFIG_ */
